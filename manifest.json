{
  "manifest_version": 3,
  "name": "Auto Web Page Reloader",
  "version": "3.5",
  "description": "Continuously reloads the current tab even after reloads, with interval input and a Start/Stop button.",
  "permissions": ["scripting", "activeTab", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}